generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Barang{
  id          Int      @id @default(autoincrement())
  nama        String
  kategoriId  Int      @map("kategori_id")
  kelompokBarang String @map("kelompok_barang")
  stok        Int
  harga   Float

  createdAt   DateTime @default(now()) @db.Timestamptz() @map("created_at")
  createdBy   String     @map("created_by")
  updatedAt   DateTime @updatedAt @db.Timestamptz() @default(now()) @map("updated_at")
  updatedBy   String   @map("updated_by")


  kategori    BarangKategori @relation(fields: [kategoriId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  @@map("barang")
}

model BarangKategori{
  id          Int      @id @default(autoincrement())
  nama        String

  createdAt   DateTime @default(now()) @db.Timestamptz() @map("created_at")
  createdBy   String     @map("created_by")
  updatedAt   DateTime @updatedAt @db.Timestamptz() @default(now()) @map("updated_at")
  updatedBy   String   @map("updated_by")


  barang      Barang[]  

  @@map("barang_kategori")
}